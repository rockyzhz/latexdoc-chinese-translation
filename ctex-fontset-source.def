\GetIdInfo$Id: ctex.dtx 13a2256 2022-07-14 18:54:09 +0800 Qing Lee <sobenlee@gmail.com> $
  {Source fonts definition (CTEX)}
\ProvidesExplFile{ctex-fontset-source.def}
  {\ExplFileDate}{2.5.10}{\ExplFileDescription}
\ctex_fontset_case:nnnn
  { \ctex_fontset_error:n { source } }
  {
    \ctex_zhmap_case:nnn
      {
        \setCJKmainfont { SourceHanSerifSC-Regular.otf }
          [
            cmap       = UniGB-UTF16-H,
            BoldFont   = SourceHanSerifSC-Bold.otf,
            ItalicFont = FandolKai-Regular.otf
          ]
        \setCJKsansfont { SourceHanSansSC-Regular.otf }
          [ cmap = UniGB-UTF16-H, BoldFont = SourceHanSansSC-Bold.otf ]
        \setCJKmonofont { FandolFang-Regular.otf }
          [ cmap = UniGB-UTF16-H ]
        \setCJKfamilyfont { zhsong } { SourceHanSerifSC-Regular.otf }
          [ cmap = UniGB-UTF16-H, BoldFont = FandolSong-Bold.otf ]
        \setCJKfamilyfont { zhhei  } { SourceHanSansSC-Regular.otf  }
          [ cmap = UniGB-UTF16-H, BoldFont = SourceHanSansSC-Bold.otf  ]
        \setCJKfamilyfont { zhfs   } { FandolFang-Regular.otf }
          [ cmap = UniGB-UTF16-H ]
        \setCJKfamilyfont { zhkai  } { FandolKai-Regular.otf  }
          [ cmap = UniGB-UTF16-H ]
        \ctex_punct_set:n { source }
        \ctex_punct_map_family:nn   { \CJKrmdefault         } { zhsong  }
        \ctex_punct_map_family:nn   { \CJKsfdefault         } { zhhei   }
        \ctex_punct_map_family:nn   { \CJKttdefault         } { zhfs    }
        \ctex_punct_map_bfseries:nn { \CJKrmdefault, zhsong } { zhsongb }
        \ctex_punct_map_bfseries:nn { \CJKsfdefault, zhhei  } { zhheib  }
        \ctex_punct_map_itshape:nn  { \CJKrmdefault         } { zhkai   }
      }
      {
        \ctex_load_zhmap:nnnn { rm } { zhhei } { zhfs } { source }
        \ctex_punct_set:n { source }
        \ctex_punct_map_family:nn   { \CJKrmdefault } { zhsong }
        \ctex_punct_map_bfseries:nn { \CJKrmdefault } { zhhei  }
        \ctex_punct_map_itshape:nn  { \CJKrmdefault } { zhkai  }
      }
      { \ctex_fontset_error:n { source } }
  }
  {
    \ctex_set_upfonts:nnnnnn
      { SourceHanSerifSC-Regular.otf  }
      { SourceHanSerifSC-Bold.otf     }
      { FandolKai-Regular.otf         }
      { SourceHanSansSC-Regular.otf   }
      { SourceHanSansSC-Bold.otf      }
      { FandolFang-Regular.otf        }
    \ctex_set_upfamily:nnn { zhsong } { upzhserif   } { upzhserifb }
    \ctex_set_upfamily:nnn { zhhei  } { upzhsans    } { upzhsansb  }
    \ctex_set_upfamily:nnn { zhfs   } { upzhmono    } {}
    \ctex_set_upfamily:nnn { zhkai  } { upzhserifit } {}
  }
  {
    \setCJKmainfont { SourceHanSerifSC-Regular.otf }
      [
        Extension  = .otf,
        BoldFont   = SourceHanSerifSC-Bold.otf,
        ItalicFont = FandolKai-Regular
      ]
    \setCJKsansfont { SourceHanSansSC-Regular.otf  }
      [ Extension = .otf, BoldFont = SourceHanSansSC-Bold.otf ]
    \setCJKmonofont { FandolFang-Regular }
      [ Extension = .otf ]
    \setCJKfamilyfont { zhsong } { FandolSong-Regular }
      [ Extension = .otf, BoldFont = FandolSong-Bold ]
    \setCJKfamilyfont { zhhei  } { SourceHanSansSC-Regular.otf  }
      [ Extension = .otf, BoldFont = SourceHanSansSC-Bold.otf  ]
    \setCJKfamilyfont { zhfs   } { FandolFang-Regular }
      [ Extension = .otf ]
    \setCJKfamilyfont { zhkai  } { FandolKai-Regular  }
      [ Extension = .otf ]
  }
\NewDocumentCommand \songti   { } { \CJKfamily { zhsong  } }
\NewDocumentCommand \heiti    { } { \CJKfamily { zhhei   } }
\NewDocumentCommand \fangsong { } { \CJKfamily { zhfs    } }
\NewDocumentCommand \kaishu   { } { \CJKfamily { zhkai   } }
